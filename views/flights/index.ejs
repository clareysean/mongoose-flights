<%- include('../partials/header') %>
<h2>All Flights</h2>
<table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departs</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function (flight) { %>
        <% let currentDate = new Date(); %>
        <% let flightDate = new Date(flight.departs); %>
        <% let isFlightPassed = flightDate < currentDate; %>
        <tr class="<%= isFlightPassed ? 'flight-passed' : '' %>">
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNumber %></td>
          <td><%= flight.departs.toISOString().slice(0, 16).replace('T', ' ') %></td>
          <td><a href="/flights/<%= flight._id %>">Details</a></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>